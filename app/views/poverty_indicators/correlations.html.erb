<div class="page-header">
  <h1><%= t :correlations %></h1>
</div>

<div class="row">
  <div class="col-xs-12">
    <table class="table table-condensed">
      <thead>
      <tr>
        <td><%= t @correlations.comparison_indicator, scope: :indicators %></td>
      </tr>
      </thead>

      <tbody>
        <% @correlations.table.each do |row| %>
          <tr>
            <td><%= t row[0], scope: :indicators %></td>
            <td><%= number_with_delimiter row[1] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
